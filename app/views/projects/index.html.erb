<h1>Listing projects</h1>

<div class="table-responsive">
	<table class="table table-hover">
	  <thead>
	    <tr>
	      <th>Name</th>
	      <th>Description</th>
	      <th></th>
	    </tr>
	  </thead>
	
	  <tbody>
	    <% @projects.each do |project| %>
	      <tr>
	        <td><%= project.name %></td>
	        <td><%= project.description %></td>
	        <td class="last">
	        	<btn type="button" class="btn btn-default"><%= link_to 'Show', project %></btn>
	        	<btn type="button" class="btn btn-info"><%= link_to 'Edit', edit_project_path(project) %></btn>
	        	<btn type="button" class="btn btn-danger"><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></btn>
	        </td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
</div>

<br>

<%= link_to 'New Project', new_project_path %>
