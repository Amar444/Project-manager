<h2>Change your password</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="loginfields">
	  <div class="input-group loginstyle">
	  	<span class="input-group-addon">Password</span>
	  	<%= f.password_field :password, autocomplete: "off", placeholder: "New password", class: "form-control" %>
	  </div>
	
	  <div class="input-group loginstyle">
	  	<span class="input-group-addon">Password</span>
	  	<%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "New password again", class: "form-control" %>
	  </div>
	
	  <div><%= f.submit "Change my password", class: "btn btn-primary" %></div><br>
  </div>
<% end %>

<%= render "devise/shared/links" %>
