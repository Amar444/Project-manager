<h2>Sign in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="loginfields">
	  <div class="input-group loginstyle">
	  	<span class="input-group-addon">Email</span>
	  	<%= f.input :email, :label => false, autofocus: true, placeholder: "Email",:input_html => { class: "form-control" } %>
	  </div> 
	
	  <div class="input-group loginstyle">
	  	<span class="input-group-addon">Password</span>
	  	<%= f.input :password, :label => false, autocomplete: "off", placeholder: "Password", :input_html => { class: "form-control" } %>
	  </div>
	
	  <% if devise_mapping.rememberable? -%>
	    <div>
	    	<%= f.check_box :remember_me %> <%= f.label :remember_me %>
	    </div>
	  <% end -%>
	
	  <div><%= f.submit "Sign in", class: "btn btn-primary" %></div><br>
  </div>
<% end %>

<%= render "devise/shared/links" %>
