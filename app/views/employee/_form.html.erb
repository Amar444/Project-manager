
<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
				Ã—
			</button>
			<h4 class="modal-title" id="myModalLabel">Edit user</h4>
		</div>
		<%= simple_form_for @user, :url => {:action => "update", :controller => "employee" } do |f| %>
		<div class="modal-body">
			
			<% if @user.errors.any? %>
			<div id="error_explanation">
				<h2><%= pluralize(@user.errors.count, "error") %> prohibited this project from being saved:</h2>

				<ul>
					<% @user.errors.full_messages.each do |msg| %>
					<li>
						<%= msg %>
					</li>
					<% end %>
				</ul>
			</div>
			<% end %>

			<div class="field">
				<%= f.input :full_name, :input_html => { class: "form-control input-width", :placeholder => "Full name" } %>
			</div>
			<div class="field">
				<%= f.input :email, :input_html => { class: "form-control input-width", :placeholder => "Email" } %>
			</div>
			<% if User.find(params[:id]).role != "admin"  %>
			<div class="field">
				<%= f.input :role, :collection => user_ranks, include_blank: false, :input_html => { :class => "form-control combo-width", :onChange => "confirm_role(this)" } %> 
			</div>
			<% end %>

		</div>
		<div class="modal-footer">
			<button type="button" class="btn btn-default" data-dismiss="modal">
				Close
			</button>
			<%= f.submit class:"btn btn-primary submitedituser" %>
		</div>
		<% end %>
	</div>
</div>

<script>
function confirm_role(e){
	
	if($(e).val() == 'moderator' ){
		if(confirm('Do you really want to make this user a moderator?')){	
		} else {
			e.selectedIndex = 0;
		}
	} else {
		if(confirm('Do you really want to demote this user?')){	
		} else {
			e.selectedIndex = 1;
		}
	}
	
};
</script>
