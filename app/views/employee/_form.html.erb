
<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
				Ã—
			</button>
			<h4 class="modal-title" id="myModalLabel">Edit user</h4>
		</div>
		<%= form_for @user, :url => {:action => "update", :controller => "employee" } do |f| %>
		<div class="modal-body">
			
			<% if @user.errors.any? %>
			<div id="error_explanation">
				<h2><%= pluralize(@user.errors.count, "error") %> prohibited this project from being saved:</h2>

				<ul>
					<% @user.errors.full_messages.each do |msg| %>
					<li>
						<%= msg %>
					</li>
					<% end %>
				</ul>
			</div>
			<% end %>

			<div class="field">
				<%= f.label :full_name %>
				<br>
				<%= f.text_field :full_name, class: "form-control input-width", :placeholder => "Full name" %>
			</div>
			<div class="field">
				<%= f.label :email %>
				<br>
				<%= f.email_field :email, class: "form-control input-width", :placeholder => "Email" %>
			</div>
			<% if User.find(params[:id]).role == "admin" || User.find(params[:id]) == current_user %>
			<% else %>
			<div class="field">
				<%= f.label "Role" %>
				<br>
				<%= f.select :role, options_for_select([ ["User","user"],["Moderator","moderator"] ], :selected => @user.role),{}, {:class => "form-control combo-width"} %>
			</div>
			<% end %>

		</div>
		<div class="modal-footer">
			<button type="button" class="btn btn-default" data-dismiss="modal">
				Close
			</button>
			<%= f.submit class:"btn btn-primary" %>
		</div>
		<% end %>
	</div>
</div>

