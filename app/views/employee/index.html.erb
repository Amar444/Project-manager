<h2>All users:</h2> 
<%= link_to 'New user', new_employee_path, {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window',:class => "btn btn-info"} %>
<div class="table-responsive">
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th>Email</th>
				<th>Role</th>
				<th></th>
			</tr>
		</thead>

		<tbody>

			<% @user.each do |user| %>
			<tr>
				<td><%= user.full_name %></td>
				<td><%= user.email %></td>
				<td> <% if user.admin? %> <span style="color:red;"> ADMIN </span> <% else %>
				User
				<% end %>
				<br />
				</td>
				<td class="last"> 
				<%= link_to 'Delete', '#', data: { confirm: 'Are you sure? Doesnt work yet :P' },  class: "btn btn-danger"  %>
				<%= link_to 'Edit', edit_employee_path(user), {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window',:class => "btn btn-info"} 
				 %> 
				</td> 
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>

<div id="modal-window" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>

