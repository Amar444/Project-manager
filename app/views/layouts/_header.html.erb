<header class="navbar navbar-default">
	<div class="container">
		<a class="navbar-brand" href="/"><b>Meesterproef</b></a>
		<nav>
			<ul class="nav navbar-nav">
				<% if user_signed_in? %>
				<li>
					<%= link_to "Timecard",    '/' %>
				</li>
				<li>
					<%= link_to "Projects",    '/projects' %>
				</li>
				<% if current_user.role == "admin" || current_user.role == "moderator" %>
				<li>
					<%= link_to "Manage users", '/employee' %>
				</li>
				<% end %>
				<% end %>
			</ul>

			<% if user_signed_in? %>

			<div class="nav navbar-form navbar-right" style="padding:0px;margin-left:5px;">
				<div class="btn-group">
					<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" >
						<%= current_user.full_name %> <span class="caret"></span>
					</button>
					<ul class="dropdown-menu" role="menu">
						<li>
							<%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %>
						</li>
						<li>
							<%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
						</li>
					</ul>
				</div>
			</div>
			
			<div class="nav navbar-text navbar-right">
				<% if current_user.role == "admin" %>
				<span style="color:red;"> ADMIN </span>
				<% elsif current_user.role == "moderator" %>
				<span style="color:red;"> MODERATOR </span>
				<% end %>
			</div>
			
			<% else %>
			<div class="nav navbar-text navbar-right">
				<%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |
				<%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
			</div>
			<% end %>

		</nav>
	</div>
</header>

